.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__group-name
        = @group.name
      .chat-main__group-info__left-box__member
        Member : 
        - @group.users.each do |group|
          = group.name
    .chat-main__group-info__right-box
      .chat-main__group-info__right-box__edit-btn
        = link_to edit_group_path(@group.id), class: "chat-main__group-info__right-box__edit-btn__letter" do
          = 'Edit'
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-main__message-form__new_message__input', placeholder: 'type a message'
      .chat-main__message-form__new_message__mask
        = f.label :image, class: 'label' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'chat-main__message-form__new_message__sendbtn'