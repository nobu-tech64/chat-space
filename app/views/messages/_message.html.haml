.chat-main__message-list__commenter{data: {message: {id: message.id}}}
  .chat-main__message-list__commenter__name
    = message.user.name
  .chat-main__message-list__commenter__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__message-list__content
  - if message.content?
    = message.content
  - else
    = image_tag message.image.url, class: ".chat-main__message-list__image" if message.image.present?
