.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons 
        = link_to new_group_path, class: "side-bar__user-name__top-items__icons__btn" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-items__icons__btn" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__set
        = link_to '#' do
          .side-bar__group-list__set__group-name
            = group.name
          .side-bar__group-list__set__recent-message
            まだメッセージがありません